#!/usr/bin/env bash

usage() {
    cat <<EOF 1>&2
USAGE: $0 <options>

Read and transpose a matrix from stdin. 

Options:
  -m : perform the entire transpose in RAM
  -l <count> : number of lines to transpose at a time;
    a larger number requires more RAM
    (default: 100)
EOF
    exit $1
}

tmpdir=/tmp
lines=1000

while getopts ml: opt; do
    case $opt in
        m) tmpdir=/dev/shm ;;
        l) lines="$OPTARG" ;;
        h) usage 0 ;;
    esac
done

wd=$(mktemp -d -p $tmpdir)
trap 'rm -rf $wd' ERR

process() {
    mkfifo $FILE
    rs -T -c"	" -C"	" \
        | sed -e 's/\s*$//' \
        | lz4 -q > $FILE &
}
export -f process

split -l $lines --filter=process - $wd/x
zpaste $wd/*
rm -rf $wd
